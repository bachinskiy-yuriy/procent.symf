<!DOCTYPE html>
<html lang="ru">
<head>
    {% include 'blocks/head.html.twig' %}
</head>
<body class="loaded">

    <!-- onekey header -->
    <header class="onekey-header">
        {% set ua = path(app.request.attributes.get('_route'), app.request.get('_route_params')|merge({'_locale':'ua'})) %}
        {% set ru = path(app.request.attributes.get('_route'), app.request.get('_route_params')|merge({'_locale':'ru'})) %}
        {{ render(controller('AppBundle:Main:mainmenu',{ 'ua': ua, 'ru': ru })) }}
    </header>    
    <div id="onekey-content-wrapper">
        {% block content %}{% endblock %}
    </div>

    {{ render(controller('AppBundle:Main:slider')) }}

    <!-- FOOTER -->
    <footer class="onekey-footer">
        {% include 'blocks/footer.html.twig' %}
    </footer>

    {% include 'blocks/js.html.twig' %}

</body>
</html>