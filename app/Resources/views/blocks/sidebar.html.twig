                    <!-- onekey-block -->
                <div class="onekey-block no-border small" >      
                    {{ render(controller('AppBundle:Main:sidebar')) }}
                </div>
                
                    <div class="onekey-space marg-lg-b25"></div>
                    <div class="onekey-block no-border small ">
                        <form class="onekey-subscribe" method="POST" action="{{ path('addsubscriber') }}">
                            <img class="img-responsive center-block" src="/img/logo.png" height="82" width="250" alt="">
                            <div class="onekey-simple-text">
                                <p>{%trans%}Would you like to receive a loan on the most favorable terms?{%endtrans%}</p>
                                <p>{%trans%}Subscribe to our newsletter with shares from credit companies{%endtrans%}</p>
                                <p>{%trans%}Our rule is no more than 1 letter per month.{%endtrans%}</p>
                            </div>
                            <div class="onekey-input">
                                {{ form_widget(form.user, { 'attr': {'placeholder': 'Your name *', 'value': app.request.cookies.get("user")  } }) }}
                                <div class="onekey-input-arrow">!</div>
                            </div>
                            <div class="onekey-input">
                                {{ form_widget(form.mail, { 'attr': {'placeholder': 'Your email *', 'value': app.request.cookies.get("mail") } }) }}
                                <div class="onekey-input-arrow">!</div>
                            </div>
                            <div class="onekey-input">
                                {{ form_widget(form.tel, { 'attr': {'placeholder': 'Telephone (optional)', 'value': app.request.cookies.get("tel") } }) }}
                                <div class="onekey-input-arrow">!</div>
                            </div>
                            
                            <div class="onekey-hr"></div>
                            <div class="text-center">
                                {{ form_widget(form.submit, { 'label': 'Subscribe', 'attr': {'class': 'onekey-btn color-2' } }) }}
                            </div>                          
                            {#<input type="hidden" name="route" value="{{ app.request.getRequestUri() }}">#}
                        </form>
                    </div>
                    <div class="onekey-space marg-lg-b30"></div>                                       
